import random

listed = []

inputed = input("Do you want to A) Insert your own numbers or B) Have a random list generated. ").strip().lower()

while True: 
    if inputed == "a":
        print("Input your own number or enter 'end' to stop. ")
        while True:
            inputed = input("")
            if type(inputed) == int:
                listed.append()
            elif type(inputed).strip().lower() == "n":
                break
            else: 
                print("Invalid option. ")
    elif inputed == "b":
        x = random.randrange(3,5)
        for i in range(x):
            listed.append(random.randrange(1,10))
    else:
        print("Invalid input. ")
